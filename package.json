{
  "name": "ghr",
  "version": "2.0.0",
  "description": "GitHub Pull Request Reviewer - A powerful command-line tool for reviewing PRs with TUI support",
  "main": "dist/index.js",
  "bin": {
    "ghr": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "github",
    "pull-request",
    "code-review",
    "cli",
    "tui",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "blessed": "^0.1.81",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "dotenv": "^17.2.3"
  }
}
